{% extends 'base.html.twig' %}

{% block title %}Forum Details{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center mb-4">Forum Details</h1>

        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th scope="row" class="bg-light" style="width: 20%;">ID</th>
                            <td>{{ forum.id }}</td>
                        </tr>
                        <tr>
                            <th scope="row" class="bg-light">Title</th>
                            <td>{{ forum.title }}</td>
                        </tr>
                        <tr>
                            <th scope="row" class="bg-light">Description</th>
                            <td>{{ forum.description }}</td>
                        </tr>
                    </tbody>
                </table>

                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('app_forum_index') }}" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>

                    <div>
                        <a href="{{ path('app_forum_edit', {'id': forum.id}) }}" class="btn btn-warning me-2">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        {{ include('forum/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
